
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/skinTonesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:layout_marginTop="5dp"
        android:text="Skin Tones:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/skinTonesSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinTonesTextView"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/allergyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinTonesSpinner"
        android:layout_marginTop="5dp"
        android:text="Allergy:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/allergySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/allergyTextView"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/skinTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allergySpinner"
        android:layout_marginTop="5dp"
        android:text="Skin Type:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/skinTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinTypeTextView"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/skinSensitivityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinTypeSpinner"
        android:layout_marginTop="5dp"
        android:text="Skin Sensitivity:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/skinSensitivitySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinSensitivityTextView"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/skinConcernTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@id/skinSensitivitySpinner"
    android:layout_marginTop="5dp"
    android:text="Skin Concern:"
    android:textSize="18sp" />

    <Spinner
        android:id="@+id/skinConcernSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinConcernTextView"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinConcernSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Submit"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="204dp"
        android:layout_height="55dp"
        android:layout_below="@id/submitButton"
        app:srcCompat="@drawable/fair" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_below="@+id/imageView14"
        app:srcCompat="@drawable/light" />
    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_below="@+id/imageView15"
        app:srcCompat="@drawable/lightmedium" />
    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_below="@+id/imageView16"
        app:srcCompat="@drawable/medium" />
    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_below="@+id/imageView17"
        app:srcCompat="@drawable/mediumdeep" />
    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_below="@+id/imageView18"
        app:srcCompat="@drawable/deep" />

</RelativeLayout>
